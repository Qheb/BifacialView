<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BifacialView">
        <attr name="bv_drawableLeft" format="reference" />
        <attr name="bv_drawableRight" format="reference" />
        <attr name="bv_delimiterColor" format="color" />
        <attr name="bv_delimiterWidth" format="dimension" />
        <attr name="bv_arrowColor" format="color" />
        <attr name="bv_arrowWidth" format="dimension"/>
        <attr name="bv_arrowHeight" format="dimension"/>
        <attr name="bv_arrowFill" format="boolean"/>
        <attr name="bv_arrowStrokeWidth" format="dimension"/>
        <attr name="bv_arrowCornerRadius" format="dimension"/>
        <attr name="bv_arrowMarginDelimiter" format="dimension"/>
        <attr name="bv_arrowMarginTop" format="dimension"/>
        <attr name="bv_arrowMarginBottom" format="dimension"/>
        <attr name="bv_arrowVisibility" format="boolean" />
        <attr name="bv_textSize" format="dimension" />
        <attr name="bv_textColor" format="color" />
        <attr name="bv_leftText" format="string" />
        <attr name="bv_rightText" format="string" />
        <attr name="bv_touchMode" format="enum">
            <enum name="all" value="0" />
            <enum name="delimiter" value="1" />
        </attr>
        <attr name="bv_arrowGravity">
            //We reuse flags from the Android SDK but only vertical gravities are taken into account
            //https://stackoverflow.com/questions/9531177/correct-format-for-androidgravity-in-attrs-xml
            <flag name="bottom" value="80" />
            <flag name="center" value="17" />
            <flag name="center_horizontal" value="1" />
            <flag name="center_vertical" value="16" />
            <flag name="clip_horizontal" value="8" />
            <flag name="clip_vertical" value="128" />
            <flag name="end" value="8388613" />
            <flag name="fill" value="119" />
            <flag name="fill_horizontal" value="7" />
            <flag name="fill_vertical" value="112" />
            <flag name="left" value="3" />
            <flag name="right" value="5" />
            <flag name="start" value="8388611" />
            <flag name="top" value="48" />
        </attr>
    </declare-styleable>
</resources>
