<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ebr163.bifacialview.SimpleActivity">

    <com.ebr163.bifacialview.view.BifacialView
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:layout_centerInParent="true"
        app:bv_arrowColor="@color/colorAccent"
        app:bv_arrowCornerRadius="2dp"
        app:bv_arrowFill="false"
        app:bv_arrowStrokeWidth="3dp"
        app:bv_arrowWidth="27dp"
        app:bv_arrowHeight="41dp"
        app:bv_arrowMarginDelimiter="10dp"
        app:bv_arrowGravity="center_vertical"
        app:bv_arrowMarginTop="50dp"
        app:bv_arrowVisibility="true"
        app:bv_delimiterWidth="3dp"
        app:bv_drawableLeft="@drawable/left"
        app:bv_drawableRight="@drawable/right"
        app:bv_leftText="before"
        app:bv_rightText="after"
        app:bv_textColor="@color/colorPrimary"
        app:bv_textSize="20sp" />


</RelativeLayout>
